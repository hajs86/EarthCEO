{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tax list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Country</th>
                <th>Taxespit</th>
                <th>Taxescit</th>
                <th>Taxesvat</th>
                <th>Taxesother</th>
                <th>Population</th>
                <th>Mayorname</th>
                <th>Mayoremail</th>
                <th>Updatedate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tax_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.taxesPIT }}</td>
                <td>{{ entity.taxesCIT }}</td>
                <td>{{ entity.taxesVAT }}</td>
                <td>{{ entity.taxesOther }}</td>
                <td>{{ entity.population }}</td>
                <td>{{ entity.mayorName }}</td>
                <td>{{ entity.mayorEmail }}</td>
                <td>{% if entity.updateDate %}{{ entity.updateDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tax_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tax_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tax_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
